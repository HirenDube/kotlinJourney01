<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FoodMenuCheckbox_radioButton">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/pasta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasta 60 /-"
            android:textColor="@color/brown"
            android:layout_marginVertical="40dp"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:text="Burger 80 /-"
            android:textColor="@color/brown"
            android:textSize="25sp" />

        <CheckBox
            android:layout_marginVertical="40dp"
            android:id="@+id/pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza 130 /-"
            android:textColor="@color/brown"
            android:textSize="25sp" />

        <CheckBox
            android:layout_marginVertical="40dp"
            android:id="@+id/sandwich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandwich 210 /-"
            android:textColor="@color/brown"
            android:textSize="25sp" />



        <RadioGroup
            android:id="@+id/colddrinkSelection"
            android:layout_marginVertical="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coca Cola 20 /-"
                android:textColor="@color/blue"
                android:textSize="25sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mirinda 30 /-"
                android:textColor="@color/blue"
                android:textSize="25sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pastaImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/pp1" />

        <ImageView
            android:id="@+id/burgerImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/pp1" />

        <ImageView
            android:id="@+id/pizzaImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/pp1" />

        <ImageView
            android:id="@+id/sandwichImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/pp1" />



        <ImageView
            android:id="@+id/colddrinkImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/pp1" />
    </LinearLayout>

</LinearLayout>
    <Button
        android:textSize="20sp"
        android:id="@+id/billCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Bill"/>

    <TextView
        android:id="@+id/displayBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/lime_green"
        android:textAlignment="center"
        android:text="Total Amount You Have To Pay Is : " />
</androidx.appcompat.widget.LinearLayoutCompat>